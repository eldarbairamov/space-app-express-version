{
   "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "removeComments": true,
      "moduleResolution": "node",
      "typeRoots": [
         "./node_modules/@types",
         "./src/type"
      ],
      "strictPropertyInitialization": false,
      "outDir": "./dist",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": "./",
      "paths": {
         "@src/*": [
            "src/*"
         ]
      }
   }
}
